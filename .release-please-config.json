{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "pull-request-title-pattern": "chore(${scope}): release ${component} ${version} [skip-ci]",
  "pull-request-header": "Please run the release_notes action before releasing to generate release highlights",
  "packages": {
    "packages/puppeteer": {
      "release-type": "node",
      "package-name": "@karinjs/puppeteer"
    },
    "packages/puppeteer-core": {
      "release-type": "node",
      "package-name": "@karinjs/puppeteer-core"
    }
  },
  "release-type": "node",
  "include-component-in-tag": true
}